<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <Label text="Płeć:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <RadioButton fx:id="m"  text="Mężczyzna" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <RadioButton fx:id="k" text="Kobieta" GridPane.columnIndex="2" GridPane.rowIndex="0" />

    <Label text="Waga:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="waga" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />

    <Label text="Wzrost:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="wzrost" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />

    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="4">
    <Button onAction="#onClick" prefHeight="40" text="Sprawdź swoje BMI!" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>



</GridPane>
